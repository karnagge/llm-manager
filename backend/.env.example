# Ambiente
ENVIRONMENT=development
DEBUG=true

# Servidor
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true
LOG_LEVEL=info

# Banco de Dados
DATABASE_URL=postgresql://llm_manager:llm_manager@localhost:5432/llm_manager

# Redis
REDIS_URL=redis://localhost:6379/0

# Segurança
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI
OPENAI_API_KEY=your-api-key-here

# Configurações do LLM Manager
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=4096
TEMPERATURE=0.7

# Limites e Cotas
DEFAULT_REQUESTS_PER_DAY=1000
DEFAULT_TOKENS_PER_REQUEST=4096
